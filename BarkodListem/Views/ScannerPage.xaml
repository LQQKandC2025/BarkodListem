<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="BarkodListem.Views.ScannerPage"
             Title="Barkod Tarayıcı"
             BackgroundColor="Black">
    <Grid>
        <!-- QR Tarayıcı Kamera -->
        <zxing:CameraBarcodeReaderView
            x:Name="scanBarcodeReaderView"
            BarcodesDetected="OnBarcodesDetected"
            IsTorchOn="False"
            VerticalOptions="Fill" 
            CameraLocation="Rear"
            IsDetecting="True"
            Visual="Default"/>
        <!-- Kırmızı Çerçeve ile Taramayı Belirginleştirme -->
        <Border Stroke="Red"
                StrokeThickness="3"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="250"
                HeightRequest="250">
        </Border>
        <!-- Kapat Butonu -->
        <Button 
                Text="Kapat"
                Clicked="OnCloseClicked"
                BackgroundColor="Red"
                TextColor="White"
                Padding="10"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="10"/>
        <!-- Sürekli Okuma Butonu -->
        <Button 
            x:Name="toggleContinuousScan"
            Text="Sürekli Okuma: Kapalı"
            Clicked="OnToggleContinuousScanClicked"
            BackgroundColor="Gray"
            TextColor="White"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Margin="10"/>
    </Grid>
</ContentPage>
