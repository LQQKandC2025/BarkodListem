<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BarkodListem.ViewModels"
             x:Class="BarkodListem.Pages.SSHFormPage"
             Title="SSH Formu">



    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Sorun Açıklaması:" FontSize="16"/>
            <Editor Text="{Binding SorunAciklama}" Placeholder="Lütfen açıklama girin..." AutoSize="TextChanges"/>

            <Button Text="Kaydet" Command="{Binding KaydetCommand}" />
            <Button Text="Resim Çek" Command="{Binding ResimCekCommand}" />
            <Button Text="Galeri" Command="{Binding GaleriCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
