<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarkodListem.Pages.SSHFormPage"
             Title="SSH Bilgi Girişi">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Sorun Açıklaması" FontAttributes="Bold" />
            <Editor x:Name="AciklamaEditor" Text="{Binding SorunAciklama}" Placeholder="Lütfen arıza hakkında bilgi giriniz..."
                    AutoSize="TextChanges" HeightRequest="100"/>

            <Label Text="Ekli Resim" FontAttributes="Bold" />
            <Image x:Name="SSHImage" HeightRequest="200" WidthRequest="200" Aspect="AspectFit" />
            <HorizontalStackLayout Spacing="10">
                <Button Text="Fotoğraf Çek" Command="{Binding FotografCekCommand}" />
                <Button Text="Galeriden Seç" Command="{Binding GaleridenSecCommand}" />
                <Button Text="Resmi Sil" Command="{Binding ResmiSilCommand}" />
            </HorizontalStackLayout>

            <Label Text="Miktar" FontAttributes="Bold" />
            <Entry Text="{Binding Miktar}" Keyboard="Numeric" IsReadOnly="True"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,30,0,0">
                <Button Text="Kaydet" Command="{Binding KaydetCommand}" WidthRequest="120" />
                <Button Text="İptal" Command="{Binding IptalCommand}" WidthRequest="120" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
